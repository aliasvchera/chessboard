@model RegisterViewModel

<style>
    body {
        background-image: url('@Url.Content("~/img/login.jpg")');
        background-repeat: no-repeat;
        background-color: lightgray;
        background-position-x: 300px;
        background-position-y: top;
    }
</style>

<h2>Register in<br />MAGISTER MILITVM</h2>
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Login"></label><br />
        <input asp-for="Login" />
        <span asp-validation-for="Login"></span>
    </div>
    <div>
        <label asp-for="Language"></label><br />
        <input asp-for="Language" />
        <span asp-validation-for="Language"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm"></label><br />
        <input asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div>
        <recaptcha />
    </div>
    <div>
        <input type="submit" value="Register (Continue/Create account)" />
    </div>
</form>
@section Scripts {
    <recaptcha-script />
}