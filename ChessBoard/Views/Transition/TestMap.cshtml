@model TransitionModel

    <style>
    body {
        background-image: url('@Url.Content("~/img/map_borders.jpg")');
        background-repeat: no-repeat;
    }
    </style>

    <svg width="1600" height="1000">
        @foreach (var t in Model.TransitionLines)
        {
            @if (t.PermittedForPlayer)
            {
                <line x1="@t.X1" y1="@t.Y1" x2="@t.X2" y2="@t.Y2" style="stroke:rgb(0,255,0);stroke-width:2" />
            }
            else
            {
                <line x1="@t.X1" y1="@t.Y1" x2="@t.X2" y2="@t.Y2" style="stroke:rgb(255,0,0);stroke-width:2" />
            }
        }

        @foreach (var r in Model.Regions)
        {
            <circle cx="@r.X" cy="@r.Y" r="10" stroke="red" stroke-width="2" fill="white" />
            @: <text x="@(r.X - 50)" y="@(r.Y - 20)" fill="black">@r.RegionId</text>
        }
    </svg>

